<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="gameloft.com.easyorder_server.Them_ban">
    <TextView
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nhập số lượng bàn muốn thêm hoặc xóa: "
        android:textSize="20sp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:id="@+id/num_table"
        />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.4"
            >
        </LinearLayout>
        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="THÊM"
            android:background="@color/orange_bright"
            android:id="@+id/add_table"
            />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.4"
            >

        </LinearLayout>
        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="XÓA"
            android:background="@color/orange_bright"
            android:id="@+id/remove_table"
            />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.4"
            >
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/crr_table"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Số lượng bàn hiện tại"
        android:layout_gravity="end"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:textColor="#ff0000"
        android:layout_marginRight="20dp"
        />

</LinearLayout>
